{
    "name": "khody2012/laravel-ami-toolkit",
    "description": "A powerful and developer-friendly Laravel package that provides seamless integration with Asterisk AMI (Asterisk Manager Interface).",
    "keywords": [
        "laravel",
        "asterisk",
        "ami",
        "voip",
        "pbx",
        "telephony",
        "event-driven",
        "call center",
        "realtime",
        "async",
        "reactphp"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/events": "^9.0 || ^10.0 || ^11.0 || ^12.0",
        "psr/log": "^3.0",
        "react/event-loop": "^1.5",
        "react/socket": "^1.15",
        "react/promise": "^2.9 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Khody2012\\LaravelAmiToolkit\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Khody",
            "email": "khodarahmpoor@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^8.0 || ^9.0"  // برای تست بهتر پکیج لاراول
    },
    "extra": {
        "laravel": {
            "providers": [
                "Khody2012\\LaravelAmiToolkit\\LaravelAmiServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}